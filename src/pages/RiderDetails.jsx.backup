import { useEffect, useMemo, useState } from 'react';
import { Link, useParams } from 'react-router-dom';
import {
  ArrowLeft, Truck, Mail, Phone, MapPin, Calendar,
  CheckCircle, XCircle, Wallet, TrendingUp, ArrowDownToLine,
  ShieldCheck, ShieldX, ShieldAlert, AlertCircle, Star, User, Package,
} from 'lucide-react';
import { adminAPI } from '../services/api';

function currency(value) {
  return Number(value || 0).toLocaleString();
}

const VERIFY_META = {
  verified: { label: 'Verified', bg: '#e0f2fe', color: '#0369a1', icon: ShieldCheck },
  approved: { label: 'Approved', bg: '#e0f2fe', color: '#0369a1', icon: ShieldCheck },
  pending: { label: 'Pending', bg: '#fef9ec', color: '#b45309', icon: ShieldAlert },
  rejected: { label: 'Rejected', bg: '#fff1f2', color: '#be123c', icon: ShieldX },
};

export default function RiderDetails() {
  const { riderId } = useParams();
  const [details, setDetails] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState('');

  const assetBase = useMemo(() => {
    const apiUrl = import.meta.env.VITE_API_URL || '';
    const base = apiUrl.replace(/\/api\/v1\/?$/, '');
    return base || '';
  }, []);

  const toAssetUrl = (url) => {
    if (!url) return null;
    if (url.startsWith('http://') || url.startsWith('https://')) return url;
    const cleanUrl = url.startsWith('/') ? url : `/${url}`;
    return assetBase ? `${assetBase}${cleanUrl}` : cleanUrl;
  };

  const fetchDetails = async () => {
    try {
      setLoading(true);
      setError('');
      console.log('Fetching rider details for ID:', riderId);
      const response = await adminAPI.getRiderDetails(riderId);
      console.log('Rider details response:', response.data);
      setDetails(response.data?.data || null);
    } catch (err) {
      console.error('Error fetching rider details:', err);
      setError(err.response?.data?.message || 'Failed to load rider details');
    } finally {
      setLoading(false);
    }
  };

  useEffect(() => {
    if (riderId) {
      fetchDetails();
    }
  }, [riderId]);

  const renderStars = (rating) => {
    const val = parseFloat(rating) || 0;
    return (
      <div className="rid-rating">
        <div className="rid-stars">
          {[1, 2, 3, 4, 5].map(n => (
            <Star
              key={n}
              size={14}
              fill={n <= Math.round(val) ? '#f59e0b' : 'none'}
              color={n <= Math.round(val) ? '#f59e0b' : '#ddd'}
            />
          ))}
        </div>
        <span className="rid-rating-num">{val ? val.toFixed(1) : '0.0'}</span>
      </div>
    );
  };

  if (loading) return (
    <>
      <style>{styles}</style>
      <div className="rid-state-wrap">
        <div className="rid-spinner" />
        <p>Loading rider details...</p>
      </div>
    </>
  );

  if (error) return (
    <>
      <style>{styles}</style>
      <div className="rid-root">
        <Link to="/riders" className="rid-back">
          <ArrowLeft size={15} /> Back to Riders
        </Link>
        <div className="rid-error">
          <AlertCircle size={16} />
          {error}
        </div>
      </div>
    </>
  );

  if (!details) return (
    <>
      <style>{styles}</style>
      <div className="rid-root">
        <Link to="/riders" className="rid-back">
          <ArrowLeft size={15} /> Back to Riders
        </Link>
        <div className="rid-error">
          <AlertCircle size={16} />
          No rider data found
        </div>
      </div>
    </>
  );

  const profile = details?.profile || {};
  const rider = details?.rider || {};
  const wallet = details?.wallet || {};
  const verification = details?.verification || null;
  const recentDeliveries = details?.recentDeliveries || [];
  const vMeta = VERIFY_META[verification?.status] || VERIFY_META.pending;
  const VIcon = vMeta.icon;

  const docs = verification ? [
    { label: 'Ghana Card Front', url: verification.ghana_card_front_url },
    { label: 'Ghana Card Back', url: verification.ghana_card_back_url },
    { label: 'Selfie', url: verification.selfie_url },
  ] : [];

  return (
    <>
      <style>{styles}</style>

      <div className="rid-root">

        {/* Back + header */}
        <div>
          <Link to="/riders" className="rid-back">
            <ArrowLeft size={15} /> Back to Riders
          </Link>
          <div className="rid-page-header">
            <div className="rid-page-icon">
              <Truck size={24} color="#7dd3fc" />
            </div>
            <div>
              <h1 className="rid-title">{profile.name || 'Rider Details'}</h1>
              <p className="rid-sub">Profile, deliveries, wallet and verification data</p>
            </div>
            {rider.is_available && (
              <span className="rid-header-badge rid-badge-available">
                <CheckCircle size={14} /> Available
              </span>
            )}
          </div>
        </div>

        {/* Stats cards */}
        <div className="rid-grid-4">
          {[
            { label: 'Total Deliveries', value: rider.total_deliveries || 0, icon: Package, accent: '#0369a1', bg: '#e0f2fe' },
            { label: 'Rating', value: renderStars(rider.rating), icon: Star, accent: '#f59e0b', bg: '#fffbeb', isRating: true },
            { label: 'Vehicle Type', value: rider.vehicle_type || 'Not set', icon: Truck, accent: '#7c3aed', bg: '#f5f3ff' },
            { label: 'Status', value: rider.is_available ? 'Available' : 'Offline', icon: rider.is_available ? CheckCircle : XCircle, accent: rider.is_available ? '#22c55e' : '#9ca3af', bg: rider.is_available ? '#f0fdf4' : '#f9fafb' },
          ].map(c => {
            const Icon = c.icon;
            return (
              <div className="rid-stat-card" key={c.label}>
                <div className="rid-stat-icon" style={{ background: c.bg }}>
                  <Icon size={16} color={c.accent} />
                </div>
                <div>
                  <p className="rid-stat-label">{c.label}</p>
                  {c.isRating ? c.value : (
                    <p className="rid-stat-value" style={{ color: c.accent }}>{c.value}</p>
                  )}
                </div>
              </div>
            );
          })}
        </div>

        {/* Wallet cards */}
        <div className="rid-grid-3">
          {[
            { label: 'Wallet Balance', value: `$${currency(wallet.balance)}`, icon: Wallet, accent: '#0369a1', bg: '#e0f2fe' },
            { label: 'Total Earned', value: `$${currency(wallet.total_earned)}`, icon: TrendingUp, accent: '#22c55e', bg: '#f0fdf4' },
            { label: 'Total Withdrawn', value: `$${currency(wallet.total_withdrawn)}`, icon: ArrowDownToLine, accent: '#7c3aed', bg: '#f5f3ff' },
          ].map(c => {
            const Icon = c.icon;
            return (
              <div className="rid-wallet-card" key={c.label}>
                <div className="rid-wallet-icon" style={{ background: c.bg }}>
                  <Icon size={18} color={c.accent} />
                </div>
                <div>
                  <p className="rid-wallet-label">{c.label}</p>
                  <p className="rid-wallet-value" style={{ color: c.accent }}>{c.value}</p>
                </div>
              </div>
            );
          })}
        </div>

        {/* Profile + Vehicle Info */}
        <div className="rid-grid-2">

          {/* Rider profile */}
          <section className="rid-card">
            <div className="rid-section-head">
              <div className="rid-section-icon" style={{ background: '#e0f2fe' }}>
                <User size={15} color="#0369a1" />
              </div>
              <h2 className="rid-section-title">Rider Profile</h2>
            </div>

            {/* Profile Image */}
            <div className="rid-profile-img-wrap">
              {profile.profile_image ? (
                <img
                  src={toAssetUrl(profile.profile_image)}
                  alt={profile.name}
                  className="rid-profile-img"
                  onError={(e) => { e.target.style.display = 'none'; e.target.nextSibling.style.display = 'flex'; }}
                />
              ) : null}
              <div className="rid-profile-img-placeholder" style={{ display: profile.profile_image ? 'none' : 'flex' }}>
                <User size={32} color="#c4bfb5" />
              </div>
            </div>

            <div className="rid-rows">
              <div className="rid-row">
                <Mail size={14} color="#c4bfb5" />
                <span className="rid-row-label">Email</span>
                <span className="rid-row-val">{profile.email || '—'}</span>
              </div>
              <div className="rid-row">
                <Phone size={14} color="#c4bfb5" />
                <span className="rid-row-label">Phone</span>
                <span className="rid-row-val">{profile.phone || '—'}</span>
              </div>
              <div className="rid-row">
                <MapPin size={14} color="#c4bfb5" />
                <span className="rid-row-label">Address</span>
                <span className="rid-row-val">{profile.address || '—'}</span>
              </div>
              <div className="rid-row">
                <Calendar size={14} color="#c4bfb5" />
                <span className="rid-row-label">Joined</span>
                <span className="rid-row-val">
                  {profile.created_at
                    ? new Date(profile.created_at).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })
                    : '—'}
                </span>
              </div>
            </div>
          </section>

          {/* Vehicle details */}
          <section className="rid-card">
            <div className="rid-section-head">
              <div className="rid-section-icon" style={{ background: '#f5f3ff' }}>
                <Truck size={15} color="#7c3aed" />
              </div>
              <h2 className="rid-section-title">Vehicle Details</h2>
            </div>

            <div className="rid-rows">
              <div className="rid-row">
                <Truck size={14} color="#c4bfb5" />
                <span className="rid-row-label">Vehicle Type</span>
                <span className="rid-row-val">
                  <span className="rid-vehicle-pill">{rider.vehicle_type || 'Not specified'}</span>
                </span>
              </div>
              <div className="rid-row">
                <span style={{ width: 14 }} />
                <span className="rid-row-label">License Plate</span>
                <span className="rid-row-val">{rider.license_plate || '—'}</span>
              </div>
              <div className="rid-row">
                <span style={{ width: 14 }} />
                <span className="rid-row-label">Availability</span>
                <span className={`rid-pill ${rider.is_available ? 'rid-pill-green' : 'rid-pill-grey'}`}>
                  {rider.is_available
                    ? <><CheckCircle size={11} /> Available</>
                    : <><XCircle size={11} /> Offline</>}
                </span>
              </div>
              <div className="rid-row">
                <Star size={14} color="#c4bfb5" />
                <span className="rid-row-label">Rating</span>
                <span className="rid-row-val">{renderStars(rider.rating)}</span>
              </div>
              <div className="rid-row">
                <Package size={14} color="#c4bfb5" />
                <span className="rid-row-label">Total Deliveries</span>
                <span className="rid-row-val">
                  <span className="rid-deliveries-badge">{rider.total_deliveries || 0} trips</span>
                </span>
              </div>
            </div>
          </section>
        </div>

        {/* Recent Deliveries */}
        {recentDeliveries.length > 0 && (
          <section className="rid-card">
            <div className="rid-section-head">
              <div className="rid-section-icon" style={{ background: '#fef9ec' }}>
                <Package size={15} color="#b45309" />
              </div>
              <h2 className="rid-section-title">Recent Deliveries</h2>
            </div>

            <div className="rid-deliveries-table-wrap">
              <table className="rid-deliveries-table">
                <thead>
                  <tr>
                    <th>Order</th>
                    <th>Farm</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Date</th>
                  </tr>
                </thead>
                <tbody>
                  {recentDeliveries.map((d, i) => (
                    <tr key={d.id || i}>
                      <td>
                        <span className="rid-order-num">#{d.order_number}</span>
                      </td>
                      <td>{d.farm_name || '—'}</td>
                      <td>${currency(d.total_amount)}</td>
                      <td>
                        <span className={`rid-delivery-status rid-status-${(d.delivery_status || 'pending').toLowerCase()}`}>
                          {d.delivery_status || 'Pending'}
                        </span>
                      </td>
                      <td>
                        {d.created_at
                          ? new Date(d.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })
                          : '—'}
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </section>
        )}

        {/* Verification */}
        <section className="rid-card">
          <div className="rid-section-head">
            <div className="rid-section-icon" style={{ background: vMeta.bg }}>
              <VIcon size={15} color={vMeta.color} />
            </div>
            <h2 className="rid-section-title">Verification Details</h2>
            {verification && (
              <span className="rid-verify-badge" style={{ background: vMeta.bg, color: vMeta.color }}>
                {vMeta.label}
              </span>
            )}
          </div>

          {!verification || !verification.status ? (
            <p className="rid-empty-note">No verification documents submitted yet.</p>
          ) : (
            <>
              <div className="rid-grid-3" style={{ marginBottom: 20 }}>
                {[
                  { label: 'Status', value: verification.status || 'pending' },
                  { label: 'Submitted', value: verification.submitted_at ? new Date(verification.submitted_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : '—' },
                  { label: 'Verified At', value: verification.verified_at ? new Date(verification.verified_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : '—' },
                ].map(item => (
                  <div key={item.label} className="rid-info-tile">
                    <p className="rid-info-label">{item.label}</p>
                    <p className="rid-info-value">{item.value}</p>
                  </div>
                ))}
              </div>

              {verification.rejection_reason && (
                <div className="rid-rejection">
                  <AlertCircle size={15} />
                  <span><strong>Rejection reason:</strong> {verification.rejection_reason}</span>
                </div>
              )}

              <div className="rid-docs-grid">
                {docs.map(doc => {
                  const docUrl = toAssetUrl(doc.url);
                  return (
                    <div key={doc.label} className="rid-doc-card">
                      <p className="rid-doc-label">{doc.label}</p>
                      {docUrl ? (
                        <a href={docUrl} target="_blank" rel="noreferrer" className="rid-doc-img-wrap">
                          <img src={docUrl} alt={doc.label} className="rid-doc-img" />
                          <div className="rid-doc-overlay">View full</div>
                        </a>
                      ) : (
                        <div className="rid-doc-empty">Not uploaded</div>
                      )}
                    </div>
                  );
                })}
              </div>
            </>
          )}
        </section>

      </div>
    </>
  );
}

