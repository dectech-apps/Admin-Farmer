  color: #0369a1;
}
.rid-delivery-status {
  display: inline-block;
  padding: 4px 10px;
  border-radius: 6px;
  font-size: 12px;
  font-weight: 500;
  text-transform: capitalize;
}
.rid-status-delivered { background: #f0fdf4; color: #22c55e; }
.rid-status-pending { background: #fef9ec; color: #b45309; }
.rid-status-picked_up { background: #e0f2fe; color: #0369a1; }
.rid-status-assigned { background: #f5f3ff; color: #7c3aed; }
.rid-status-cancelled { background: #fef2f2; color: #dc2626; }

/* verify badge */
.rid-verify-badge {
  font-size: 12px; font-weight: 600;
  padding: 4px 12px; border-radius: 99px;
  text-transform: capitalize;
}

/* info tiles */
.rid-info-tile {
  background: #faf9f6;
  border-radius: 12px;
  padding: 14px 16px;
}
.rid-info-label { font-size: 12px; color: #aaa; margin: 0 0 5px; }
.rid-info-value {
  font-size: 14px; font-weight: 600;
  color: #222; margin: 0; text-transform: capitalize;
}

/* rejection */
.rid-rejection {
  display: flex; align-items: flex-start; gap: 10px;
  background: #fff5f5; border: 1px solid #fecdd3;
  border-radius: 12px; padding: 12px 16px;
  color: #be123c; font-size: 13.5px;
  margin-bottom: 20px;
}

/* docs */
.rid-docs-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 16px;
}
@media (min-width: 640px) { .rid-docs-grid { grid-template-columns: repeat(3, 1fr); } }

.rid-doc-card {
  border-radius: 14px;
  border: 1.5px solid #f0ede6;
  overflow: hidden;
  background: #faf9f6;
}
.rid-doc-label {
  font-size: 12.5px; font-weight: 600;
  color: #555;
  padding: 10px 14px;
  border-bottom: 1px solid #f0ede6;
}
.rid-doc-img-wrap {
  display: block;
  position: relative;
  overflow: hidden;
}
.rid-doc-img {
  width: 100%; height: 180px;
  object-fit: cover;
  display: block;
  transition: transform 0.3s;
}
.rid-doc-img-wrap:hover .rid-doc-img { transform: scale(1.04); }
.rid-doc-overlay {
  position: absolute;
  inset: 0;
  background: rgba(12,35,64,0);
  color: #fff;
  display: flex; align-items: center; justify-content: center;
  font-size: 13px; font-weight: 600;
  opacity: 0;
  transition: background 0.2s, opacity 0.2s;
}
.rid-doc-img-wrap:hover .rid-doc-overlay {
  background: rgba(12,35,64,0.45);
  opacity: 1;
}
.rid-doc-empty {
  height: 180px;
  display: flex; align-items: center; justify-content: center;
  color: #c4bfb5; font-size: 13px;
}

.rid-empty-note { font-size: 13.5px; color: #bbb; padding: 8px 0; margin: 0; }
`;
